- render(:layout => '/communities/container') do
	- form_for(@discussion) do |f|
		%h1 Start a Discussion
		%hr.spacer-bottom
		
		= f.error_messages
		
		%p
			= f.label(:title, 'Title:')
			= f.text_field(:title)
		
		%p
			= render(:partial => '/shared/markdown_cheat_sheet')
			= f.text_area(:body)
		
		%p.submit
			%button{:type => 'submit'}
				%span Start Discussion
			
			= 'or ' + link_to('Cancel', discussions_path)

:javascript
	$j('#discussion_title').focus();