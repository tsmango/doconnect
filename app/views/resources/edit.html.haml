- render(:layout => '/communities/container') do
	- form_for(@resource) do |f|
		%h1 Update a Resource
		%hr.spacer-bottom
		
		= f.error_messages
		
		= render(:partial => 'form', :locals => {:f => f})
		
		%hr
		
		%p.submit
			= link_to('Delete Resource', @resource, :confirm => 'Are you sure? There is no undo.', :method => :delete, :class => 'delete')
			
			%button{:type => 'submit'}
				%span Update Resource
			
			= 'or ' + link_to('Cancel', @resource)